<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonalFinanceTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PersonalFinanceTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PersonalFinanceTracker">
    <TabBar>
        <ShellContent Title="Финансы"
                      Route="MainPage"
                      Icon="dotnet_bot.png">
            <local:MainPage/>
        </ShellContent>
        <ShellContent Title="+"
                      Route="AddTransactionPage"
                      Icon="dotnet_bot.png">
            <local:AddTransactionPage/>
        </ShellContent>
        <ShellContent Title="Настройки"
                      Route="SettingsPage"
                      Icon="dotnet_bot.png">
            <local:SettingsPage/>
        </ShellContent>
    </TabBar>
</Shell>