<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PersonalFinanceTracker.Views.PinUnlockPage"
    Title="Введите PIN"
    BackgroundColor="#E6F2EE"
    Padding="30">

    <VerticalStackLayout Spacing="25" VerticalOptions="Center">
        <Label Text="Введите PIN-код"
               FontSize="22"
               HorizontalOptions="Center" />

        <Entry x:Name="PinEntry"
               IsPassword="True"
               Keyboard="Numeric"
               FontSize="20"
               Placeholder="PIN" />

        <Button Text="Разблокировать"
                Clicked="OnUnlockClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10" />

        <Label x:Name="StatusLabel"
               FontSize="14"
               TextColor="Red"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
