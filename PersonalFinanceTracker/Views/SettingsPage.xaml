<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PersonalFinanceTracker.Views.SettingsPage"
    Title="Настройки"
    BackgroundColor="#E6F2EE"
    Padding="20">

    <VerticalStackLayout Spacing="25">

        <Label Text="Настройки"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Экспорт -->
        <Button Text="Экспорт транзакций"
                Clicked="OnExportNavigateClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10" />

        <!-- Очистка данных -->
        <Button Text="Удалить все данные"
                Clicked="OnDeleteAllClicked"
                BackgroundColor="#F44336"
                TextColor="White"
                CornerRadius="10" />

        <!--Настройка PIN кода-->
        <Button Text="Настроить PIN-код"
                Clicked="OnPinSettingsClicked"
                BackgroundColor="#9C27B0"
                TextColor="White"
                CornerRadius="10" />

        <!-- (Опционально) Переключение темы -->
        <!--<SwitchCell Text="Темная тема" OnChanged="OnThemeSwitchChanged" />-->

        <Label x:Name="StatusLabel"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
