<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalFinanceTracker.Views.TransactionListPage"
             Title="Транзакции"
             BackgroundColor="#FAFAFA">

    <CollectionView x:Name="TransactionList">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Margin="10" Padding="10" BackgroundColor="White">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label Text="{Binding Category}" FontAttributes="Bold" />
                        <Label Text="{Binding Amount, StringFormat='{}{0:C}'}"
                               Grid.Column="1"
                               TextColor="{Binding Type, Converter={StaticResource TypeToColorConverter}}" />
                        <Label Text="{Binding Date, StringFormat='{}{0:dd MMM yyyy}'}" Grid.Row="1" FontSize="12" TextColor="Gray" />
                        <Label Text="{Binding Note}" Grid.Row="1" Grid.Column="1" FontSize="12" HorizontalTextAlignment="End" />
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
